% if ( $start_date && $end_date ) {
<p>
  Only including donations from
  <% $c->user()->format_date($start_date) %> through <% $c->user()->format_date($end_date) %>
</p>
% } elsif ($start_date) {
<p>
  Only including donations starting on <% $c->user()->format_date($start_date) %>.
</p>
% } elsif ($end_date) {
<p>
  Only including donations through <% $c->user()->format_date($end_date) %>.
</p>
% }

<ul>
% while ( my $contact = $donors->next() ) {
  <li>
    <a href="<% $contact->uri() %>"><% $contact->real_contact()->display_name() %></a>
    - <% $donors->raw_row()->[-1] %>
  </li>
% }
</ul>

% if ( ! $donors->index() ) {
<p>
