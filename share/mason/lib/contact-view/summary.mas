<div id="summary">
% if ($image ) {
  <img src="<% $image->uri() %>" title="Photo of <% $contact->display_name() %>" id="contact-image" />
% }
  <h1>
    <% $contact->display_name() %>

    <& /lib/contact-view/contact-icon.mas, contact => $contact &>
  </h1>
</div>

<%args>
$contact
</%args>

<%init>
my $image;
if ( $contact->image() )
{
    $image = $contact->image()->resize( height => 100, width => 100 );
}
</%init>
