<div id="summary">
  <h1><& SELF:title, %ARGS &></h1>
</div>

% if ($count) {
<table class="standard-table">
  <thead>
    <tr>
      <th>When</th>
      <th>Who wrote it</th>
      <th>What</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
%   while ( my $note = $notes->next() ) {
    <tr class="<% $notes->index() % 2 ? 'odd' : 'even' %>">
      <td><% $c->user()->format_datetime( $note->note_datetime() ) %></td>
      <td><a href="<% $note->user()->uri() %>"><% $note->user()->display_name() %></td>
      <td><% $note->type()->description() %></td>
      <td><% $note->note() %></td>
    </tr>
%   }
  </tbody>
</table>
% } else {
<p>Nobody has made any notes for this contact yet</p>
% }

<%args>
$contact
$real_contact
$can_edit_notes
</%args>

<%init>
my $count = $contact->note_count();
my $notes;
$notes = $contact->notes()
    if $count;
</%init>

<%method title>
Notes about <% $real_contact->display_name() %>
<%args>
$real_contact
</%args>
</%method>
