<%attr>
show_sidebar => 0
sidebar => []
</%attr>

<%init>
my $show_sidebar = $m->request_comp()->attr('show_sidebar');
</%Init>

<%def .messages>
<div id="messages">
% for my $msg (@messages) {
  <p><% $msg %></p>
% }
</div>
<%init>
my @messages = $c->session_object()->messages();

return unless @messages;
</%init>
</%def>
